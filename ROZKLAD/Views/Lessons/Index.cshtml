@model IEnumerable<ROZKLAD.Models.DbEntities.Lesson>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("Додати новий урок", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Дні
        </th>
        <th>
            Дисципліна
        </th>
        <th>
            Викладач
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Days.Days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subjects.NameSubject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teachers.SureName) @Html.DisplayFor(modelItem => item.Teachers.Name) @Html.DisplayFor(modelItem => item.Teachers.Father)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детальніше", "Details", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
