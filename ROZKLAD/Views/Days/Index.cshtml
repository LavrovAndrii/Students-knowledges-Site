@model IEnumerable<ROZKLAD.Models.DbEntities.Day>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список робочих днів тижня</h2>

<p>
    @Html.ActionLink("Додати робочий день", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Робочі дні тижня
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.ActionLink("Редагуватя", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Видалити", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
